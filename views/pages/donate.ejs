<% layout('layouts/boilerplate') %>




    <div class="body">
        <form method="POST" action="/donate">

            <div class="form-row mb-4" id="name">
                <div class=" form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Full Name" required>
                </div>
            </div>

            <div class="form-group mb-4" id="email">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" required class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>


            <div class="row form-row mb-4" id="BG">
                <div class="col col-md-6" id="bgroup">
                    <div class="form-group">
                        <label for="bloodGroup">Blood Group</label>
                        <select class="form-select required" aria-placeholder="Select Blood Group" id="bloodGroup">
                            <option selected>Select Blood Group</option>
                            <option value="1">A+</option>
                            <option value="2">A-</option>
                            <option value="3">B+</option>
                            <option value="4">B-</option>
                            <option value="5">O+</option>
                            <option value="6">O-</option>
                            <option value="7">AB+</option>
                            <option value="8">AB-</option>
                        </select>
                    </div>
                </div>

                <div class="col col-md-6" id="age">
                    <div class="form-group">
                        <label for="age">Age</label>
                        <input type="text" required class="form-control" id="number" placeholder="Enter Your Age">
                    </div>
                </div>
            </div>




            <div class="form-group mb-4" id="address">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="Permanent Address">
            </div>



            <div class="form-group col-lg mb-4" id="pnumber">
                <label for="pnumber" aria-required="true">Phone Number</label>
                <input type="tel" placeholder="Enter Phone Number" class="form-control" id="pnumber">
            </div>



            <div class="form-group mb-4" id="check">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>



            <button type="submit" id="button" class="btn" style="background-color: #FFADBB;">Submit</button>



        </form>
    </div>