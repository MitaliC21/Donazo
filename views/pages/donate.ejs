<% layout('layouts/boilerplate') %>




    <div class="body">
        <form method="POST" action="/donate">

            <div class="form-row mb-4" id="name">
                <div class=" form-group">
                    <label for="name">Name</label>
                    <input name="fName" type="text" class="form-control" id="name" placeholder="Enter Full Name"
                        required>
                </div>
            </div>

            <div class="form-group mb-4" id="email">
                <label for="exampleInputEmail1">Email address</label>
                <input name="email" type="email" required class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>


            <div class="row form-row mb-4" id="BG">
                <div class="col col-md-6" id="bgroup">
                    <div class="form-group">
                        <label for="bloodGroup">Blood Group</label>
                        <select name="bGroup" class="form-select required" aria-placeholder="Select Blood Group"
                            id="bloodGroup" required>
                            <option value="">Select Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>
                </div>

                <div class="col col-md-6" id="age">
                    <div class="form-group">
                        <label for="age">Age</label>
                        <input name="age" type="number" required class="form-control" id="number"
                            placeholder="Enter Your Age" min="18">
                    </div>
                </div>
            </div>




            <div class="form-group mb-4" id="address">
                <label for="inputAddress">Address</label>
                <input name="addr" type="text" class="form-control" id="inputAddress" placeholder="Permanent Address">
            </div>



            <div class="form-group col-lg mb-4" id="pnumber">
                <label for="pnumber" aria-required="true">Phone Number</label>
                <input name="pNumber" type="tel" placeholder="Enter Phone Number" class="form-control" id="pnumber">
            </div>



            <div class="form-group mb-4" id="check">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>



            <button type="submit" id="button" class="btn" style="background-color: #FFADBB;">Submit</button>



        </form>
    </div>