<!-- @format -->

<% layout('layouts/boilerplate') %>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"></script>
  <!-- font awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>
  <body>
  <section class="search-sec">
      <div class="container">
          <form action="/receive" method="post">
              <div class="row d-flex">
                  <div class="col-lg-12">
                      <div class="row mt-4">
                          <!-- <div class="col-lg-3 col-md-3 col-sm-12 p-0 mx-4">
                              <input type="text" class="form-control search-slt" placeholder="Enter Search">
                          </div> -->
                          <div class="col-lg-6 col-md-3 col-sm-12 p-0 mx-4 mt-4">
                              <select class="form-control search-slt">
                                  <option>Choose Blood Group</option>
                                  <option>
                                    <p>A+</p>
                                  </option>
                                  <option>
                                    <p>A-</p>
                                  </option>
                                  <option>
                                    <p>B+</p>
                                  </option>
                                  <option>
                                    <p>B-</p>
                                  </option>
                                  <option>
                                    <p>O+</p>
                                  </option>
                                  <option>
                                    <p>O-</p>
                                  </option>
                                  <option>
                                    <p>AB+</p>
                                  </option>
                                  <option>
                                    <p>AB-</p>
                                  </option>
                              </select>
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12 p-0 mt-4">
                              <button type="submit" class="btn btn-danger wrn-btn">Search</button>
                          </div>
                      </div>
                  </div>
              </div>
          </form>
          <div class="mt-5">
            <div class="card" style="width: 18rem;">
                <img src="images/Blood-Types_B-Positive.png" class="card-img-top" alt="Bpositive" id="img">
                <div class="card-body mb-4">
                  <h5 class="card-title">Name :- <%= receive.name %> </h5>
                  <p class="card-text">Email :- <%= receive.email %>  </p>
                  <p class="card-text">Age :- <%= receive.age %> </p>
                  <p class="card-text">Address :- <%= receive.addr %> </p>
                  <p class="card-text">Phone No :- <%= receive.pNumber %> </p>
                  <a href="#" class="btn btn-danger">Full Details</a>
                </div>
              </div>
          </div>
          
      </div>
  </section>
    