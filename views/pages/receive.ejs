<!-- @format -->

<% layout('layouts/boilerplate')
  %>


  <section class="search-sec">
    <div class="container">
      <form action="/receive"
        method="post"
        class="SForm">
        <div class="row">
          <div class="col-lg-12">
            <div class="row mt-4"
              id="choose">
              <div class="form-group">
                <label for="bloodGroup">Blood Group</label>
                <select name="bGroup"
                  class="form-select"
                  aria-placeholder="Select Blood Group"
                  id="select"
                  required>
                  <option value="">Select Blood Group</option>
                  <option value="A+">A+</option>
                  <option value="A-">A-</option>
                  <option value="B+">B+</option>
                  <option value="B-">B-</option>
                  <option value="O+">O+</option>
                  <option value="O-">O-</option>
                  <option value="AB+">AB+</option>
                  <option value="AB-">AB-</option>
                </select>
                <div class="col-lg-3 col-md-3 col-sm-12 p-0 mt-4">
                  <button id="button"
                    type="submit"
                    class="btn btn-danger wrn-btn">Search</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
      <div id="div">
      </div>

    </div>
  </section>